<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.Camvidgram" parent="Theme.Material3.DayNight">

        <!-- Status bar -->
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:windowLightStatusBar">true</item>

        <!-- Window background must be TRANSPARENT -->
        <item name="android:windowBackground">@android:color/transparent</item>

    </style>


    <style name="Theme.Camvidgram" parent="Theme.Material3.DayNight.NoActionBar" />

    <!-- Splash Screen Theme -->
    <style name="Theme.Camvidgram.Splash" parent="Theme.SplashScreen">
        <item name="windowSplashScreenBackground">@color/black</item>
        <item name="windowSplashScreenAnimatedIcon">@drawable/ic_launcher_foreground</item>
        <item name="postSplashScreenTheme">@style/Theme.Camvidgram</item>
    </style>

    <style name="ProgressBarTheme">
        <item name="colorControlActivated">@color/colorPrimary</item>
    </style>
</resources>